<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Knowledge Nook" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Knowledge Nook" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <Button x:Name="ReadersButton" Content="Список читачів" Width="200" Height="50" Click="ReadersButton_Click"/>
            <Button x:Name="BooksButton" Content="Список книг" Width="200" Height="50" Click="BooksButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>